{% from 'components/label/macro.njk' import label %}
{% from './section-question.njk' import sectionQuestion %}

{% macro multiQuestion(params) %}
  <div data-test-id="question-{{ params.parentQuestion.id }}" class="nhsuk-u-margin-bottom-6">

    <div data-test-id="multi-question-main-advice">
      <span class="nhsuk-label nhsuk-u-font-size-24 nhsuk-u-font-weight-bold bc-u-inline-block nhsuk-u-margin-bottom-2">
        {{ params.parentQuestion.mainAdvice }}
      </span>
    </div>

    <span data-test-id="multi-question-additional-advice" class="nhsuk-hint nhsuk-u-margin-bottom-3">
      {{ params.parentQuestion.additionalAdvice }}
    </span>

    <div data-test-id="multi-question-questions">
      {% for question in params.parentQuestion.questions %}
        {{ sectionQuestion({
          question: question,
          isMultiQuestion: true
        }) }}
      {% endfor %}
    </div>
  </div>
{% endmacro %}
