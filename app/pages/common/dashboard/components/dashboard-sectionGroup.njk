{% from './dashboard-section-row.njk' import dashboardSectionRow %}

{% macro dashboardSectionGroup(sectionGroup) %}
  <div data-test-id="dashboard-sectionGroup-{{sectionGroup.id}}">
    <div class="bc-c-title">
      <h2 class="nhsuk-u-font-size-24">
        {{ sectionGroup.title }}
      </h2>
    </div>
    <ul class="bc-c-section-list__items">
      {% for section in sectionGroup.sections %}
        {{ dashboardSectionRow(section) }}
      {% endfor %}
    </ul>
  </div>
{% endmacro %}